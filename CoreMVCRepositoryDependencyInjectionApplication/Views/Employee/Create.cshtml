@model CoreMVCRepositoryDependencyInjectionApplication.Models.Employee

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<form method="post" asp-controller="Employee" asp-action="Create">
    <div class="mb-3">
        <label for="Id" class="form-label">Employee Id:</label>
        <input type="text" class="form-control" asp-for="EmployeeId">
    </div>

    <div class="mb-3">
        <label for="Name" class="form-label">Employee Name:</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>

    <div class="mb-3">
        <label for="Gender" class="form-label">Gender:</label>
        <input type="text" class="form-control" asp-for="Gender">
    </div>

    <div class="mb-3">
        <label for="Designation" class="form-label">Designation:</label>
        <input type="text" class="form-control" asp-for="Designation">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

